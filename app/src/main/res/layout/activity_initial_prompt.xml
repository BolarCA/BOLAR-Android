<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signupflow.InitialPrompt">

    <Button
        android:id="@+id/tenantButton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Tenant" />

    <Button
        android:id="@+id/IndividualLandlordButton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tenantButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Individual Landlord" />

    <Button
        android:id="@+id/CompanyButton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_below="@+id/IndividualLandlordButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Company" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Let us know who you are"
        android:textSize="25dp" />
</RelativeLayout>